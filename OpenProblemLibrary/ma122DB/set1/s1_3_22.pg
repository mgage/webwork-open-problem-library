DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$tag = random(0,5,1);
@choose = ("x","y","a","b","s","t");
$x = $choose[$tag];

BEGIN_TEXT
Evaluate the limit
\[ \lim_{ $x \rightarrow 1 } \frac { { $x }^3- 1 }  { { $x }^2- 1 } \]
Answer: \{ans_rule(25) \}
END_TEXT

ANS(num_cmp(1.5));

