DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$f = random(1,5,1);
$df = -random(1,5,1);
$g = -random(1,9,1);
$dg = random(1,9,1);
$gabs = abs($g);

$fpg = "$df+$dg";
$fmg = "$df-($dg)";
$fg = "$df*$g+$f*$dg";
$fog = "($df*$g-($f*$dg))/$gabs^2";

BEGIN_TEXT
Given that
\[ f(3) =  $f , \quad f'(3)=$df \]
\[ g(3) =  $g , \quad  g'(3)=$dg \]
$BR$BR
Calculate \((f+g)'(3): \) \{ans_rule(30) \}
$BR
Calculate \((f-g)'(3): \) \{ans_rule(30) \}
$BR
Calculate \((f*g)'(3): \) \{ans_rule(30) \}
$BR
Calculate \((f/g)'(3): \) \{ans_rule(30) \}
END_TEXT

ANS(num_cmp($fpg));
ANS(num_cmp($fmg));
ANS(num_cmp($fg));
ANS(num_cmp($fog));

ENDDOCUMENT();        # This should be the last executable line in the problem.
