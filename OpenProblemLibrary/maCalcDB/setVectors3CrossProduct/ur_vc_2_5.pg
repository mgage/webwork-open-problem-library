DOCUMENT();	# This should be the first executable line in the problem.

loadMacros("PG.pl",      
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",      
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl"     
          );      
              
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
$a = random(1, 5, 1);
$b = random(1, 5, 1);
$c = random(1, 5, 1);
$d = random(1, 5, 1);
$e = random(1, 5, 1);
$f = random(1, 5, 1);
$g = $a+$c;
$h = $b+$d;
$i = $a+$c+$e;
$j = $b+$d+$f;
$k = $a+2*$c+$e;
$l = $b+2*$d+$f;
} until ($c*$f != $d*$e);

BEGIN_TEXT
Find the area of the parallelogram with vertices 
($a,$b), ($g, $h), ($i, $j), and ($k, $l).
$BR
$BR
Answer: \{ ans_rule(30) \}
END_TEXT

ANS(num_cmp(abs($c*$f - $d*$e)));

ENDDOCUMENT();	# This should be the last executable line in the problem.
