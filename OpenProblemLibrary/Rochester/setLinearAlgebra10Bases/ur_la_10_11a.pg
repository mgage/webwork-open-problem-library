TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-4,4,1);
$b = non_zero_random(-4,4,1);
if ($a == $b) { $a=$a+1; }
$c = non_zero_random(-4,4,1);

$k = non_zero_random(-3,3,1);
$l = non_zero_random(-3,3,1);
$m = random(-3,3,1);
if (($k == $m) or ($l == $m)) { $m = 4; } 

$a11 = $k*$a;
$a12 = $k*$b;
$a13 = $k*$c;
$a21 = $l*$a;
$a22 = $l*$b;
$a23 = $l*$c;
$a31 = $m*$a;
$a32 = $m*$b;
$a33 = $m*$c;

BEGIN_TEXT

Let \(A= \{ display_matrix_mm([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]) \} \)
$BR
Find a basis of \({\rm nullspace}(A)\).
$BR
\{mbox( ans_array(3,1,5), ',', ans_array_extension(3,1,5), '.' )\}

END_TEXT

$na = - $a;
$nb = - $b;


ANS(basis_cmp([[0, $c , $nb], [$nb, $a, 0]]));

