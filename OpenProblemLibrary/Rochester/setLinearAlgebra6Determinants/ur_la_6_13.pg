DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a11 = non_zero_random(-6,6,1);
$a22 = non_zero_random(-6,6,1);
$a33 = non_zero_random(-6,6,1);
$a44 = non_zero_random(-6,6,1);

$a21 = random(-9,9,1);
$a31 = non_zero_random(-9,9,1);
$a32 = random(-9,9,1);
$a41 = random(-9,9,1);
$a42 = non_zero_random(-9,9,1);
$a43 = random(-9,9,1);

$det = $a11 * $a22 * $a33 * $a44;

BEGIN_TEXT

Find the determinant of the matrix 
$BR  
\(A= \{display_matrix_mm([[$a11,    0,    0,    0], 
				   [$a21, $a22,    0,    0], 
				   [$a31, $a32, $a33,    0], 
				   [$a41, $a42, $a43, $a44]]) \}\)
$BR  
\(\det\,(A)=\) \{ans_rule(15)\}.
END_TEXT

ANS(num_cmp($det));

