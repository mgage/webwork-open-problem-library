$c = random(-10,10,1);
$d = random(-10,10,1);

BEGIN_TEXT

Find the characteristic polynomial of the matrix 
$BR
\( A =  \{display_matrix_mm([[$a, $b], [$c, $d]]) \} \)
$BR
\( p(x) = \) \{ans_rule(20)\}.

END_TEXT

$neg_trace = - $a - $d;
$det = $a * $d - $b * $c;

$ans = FEQ("x**2 + $neg_trace * x + $det");
ANS(fun_cmp($ans));

