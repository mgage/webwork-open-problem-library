DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$L = new Matrix(2,2);
$L -> assign(1,1,1);
$L -> assign(1,2,0);
$L -> assign(2,1,non_zero_random(-5,5,1));
$L -> assign(2,2,1);

$U = new Matrix(2,2);
$U -> assign(1,1,non_zero_random(-5,5,1));
$U -> assign(1,2,non_zero_random(-5,5,1));
$U -> assign(2,1,0);
$U -> assign(2,2,non_zero_random(-5,5,1));

$A = new Matrix(2,2);
$A = $L * $U;

$x = new Matrix(2,1);
$x -> assign(1,1,non_zero_random(-5,5,1));
$x -> assign(2,1,non_zero_random(-5,5,1));

$b = new Matrix(2,1);
$b = $A * $x;

BEGIN_TEXT

Find the LU factorization of \(A= \{ display_matrix_mm($A) \}\)
and use it to solve the system 
\(\{ display_matrix_mm($A)\} \{ display_matrix_mm([['x_1'], ['x_2']])\} = \{ display_matrix_mm($b) \}\) 
$BR
\{ mbox( '\(A=\)', answer_matrix(2,2,5), answer_matrix(2,2,5), ',' ) \}
$BR
\(x_1=\) \{ans_rule(5)\}, 
$BR
\(x_2=\) \{ans_rule(5)\}.

END_TEXT

ANS(num_cmp(ra_flatten_matrix($L)));
ANS(num_cmp(ra_flatten_matrix($U)));
ANS(num_cmp(ra_flatten_matrix($x)));

ENDDOCUMENT();       # This should be the last executable line in the problem.

