DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl", 
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-9,9,2);
$d = random(-9,9,2);
$b = non_zero_random(-8,8,2);
$c = non_zero_random(-9,9,1);

$det = $a * $d - $b * $c;

$ans11 = $d / $det;
$ans12 = - $b / $det;
$ans21 = - $c / $det;
$ans22 = $a / $det ;

BEGIN_TEXT

If \(A= \{ display_matrix_mm([[$a, $b], [$c, $d]])\}\)
$BR
\{ mbox( 'Then \(A^{-1}=\)', answer_matrix(2,2,7) ) \}

END_TEXT

ANS(num_cmp($ans11));
ANS(num_cmp($ans12));
ANS(num_cmp($ans21));
ANS(num_cmp($ans22));



