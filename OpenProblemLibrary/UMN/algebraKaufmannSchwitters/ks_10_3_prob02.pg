#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl", 
);
#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

#####################################################################

Context("Numeric");

$a = random(1,2,1);
if ($a==1) {
$a1 = random(2,6,1);
$f1 = Formula("x^2+$a1");
$popup1 = PopUp(['?','Yes', 'No'],'No');
} 
else {
$a1 = random(2,6,1);
$f1 = Formula("x^3+$a1");
$popup1 = PopUp(['?','Yes', 'No'],'Yes');
}
$b = random(2,8,2);
$f2 = Formula("|x-$b|");
$popup2 = PopUp(['?','Yes', 'No'],'No');

$c = random(2,6,1);
$f3 = Formula("$c*x+4");
$popup3 = PopUp(['?','Yes', 'No'],'Yes');

$f4 = Formula("1/x");
$popup4 = PopUp(['?','Yes', 'No'],'Yes'); 

###############################################################
Context()->texStrings;

BEGIN_TEXT
Are the following functions $BITALIC one-to-one$EITALIC?
$BR
$BR
\{$popup1->menu\} $BBOLD 1. $EBOLD  \(\displaystyle f(x) = $f1 \) 
$PAR
\{$popup2->menu\} $BBOLD 2. $EBOLD  \(\displaystyle f(x) = $f2 \)
$PAR
\{$popup3->menu\} $BBOLD 3. $EBOLD   \(\displaystyle f(x) = $f3\)
$PAR
\{$popup4->menu\} $BBOLD 4. $EBOLD   \(\displaystyle f(x) = $f4\)
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($popup1->cmp);
ANS($popup2->cmp);
ANS($popup3->cmp);
ANS($popup4->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
