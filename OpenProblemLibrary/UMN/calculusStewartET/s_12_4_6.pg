DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "parserVectorUtils.pl",
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');
Context()->variables->are(t=>'Real');

$a = random(2,6,1);

$a1 = Vector("<1,e^t,e^(-t)>");
$b1 = Vector("<$a,e^t,-e^(-t)>");

$ab2 = Compute("($a+1)*e^(-t)")->reduce;
$ab3 = Compute("(1-$a)*e^(t)")->reduce;

$an = Vector("<-2,$ab2,$ab3>");

$ans = Compute("$an");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the cross product \(\left( \mathbf{i}+e^t\mathbf{j}+e^{-t}\mathbf{k} \right) \times \left( $a\mathbf{i}+e^t\mathbf{j}-e^{-t}\mathbf{k} \right).\)
$PAR
Answer: \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp(showCoordinateHints => 0 ));

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.