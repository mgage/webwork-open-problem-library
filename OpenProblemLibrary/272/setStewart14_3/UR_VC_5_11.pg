## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('6')
## Section1('14.3')
## Problem1('')
## KEYWORDS('Multivariable', 'Partial Derivative')

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1, 5);
$b = non_zero_random(-5, 5);

$dfdx = -$b/(2*$a);
$dfdy = $b/(2*$a);
$dfdz = $PI/4;

BEGIN_TEXT
$PAR
Find the first partial derivatives of \( f(x,y,z) = z \ \arctan(\frac{y}{x}) \) at
the point ($a, $a, $b).
$PAR
A. \( \frac{\partial f}{\partial x}($a, $a, $b) = \) \{ ans_rule(30) \}
$PAR
B. \( \frac{\partial f}{\partial y}($a, $a, $b) = \) \{ ans_rule(30) \}
$PAR
C. \( \frac{\partial f}{\partial z}($a, $a, $b) = \) \{ ans_rule(30) \}
END_TEXT
ANS(num_cmp($dfdx));
ANS(num_cmp($dfdy));
ANS(num_cmp($dfdz));

ENDDOCUMENT();
